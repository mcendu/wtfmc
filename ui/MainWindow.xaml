<Window x:Class="wtf_kyhgzsh_minecraft_launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wtf_kyhgzsh_minecraft_launcher"
        mc:Ignorable="d"
        Title="Minecraft Lancher by mcendu and skyhgzsh" Height="340" Width="290" IsEnabled="True" ResizeMode="NoResize">
    <Grid Margin="0,0,0,0">
        <TabControl HorizontalAlignment="Left" Height="310" VerticalAlignment="Top" Width="305" Margin="0,0,0,0">
            <TabItem Header="Minecraft 启动">
                <Grid Background="#FFE5E5E5" Margin="0,0,21,0" RenderTransformOrigin="0.555,0.515">
                    <Image HorizontalAlignment="Left" Height="96" VerticalAlignment="Top" Width="96" Margin="10,10,0,0" Source="..\ui\img\ico.png" IsEnabled="False" Stretch="None"/>
                    <Label Content="启动方式：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,10,0,0"/>
                    <Label x:Name="access_show" Content="账号：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,40,0,0"/>
                    <Label x:Name="password_show" Content="密码：" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="111,70,0,0"/>
                    <PasswordBox x:Name="password" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,75,0,0" Width="100" IsEnabled="False"/>
                    <TextBox x:Name="access" HorizontalAlignment="Left" Height="18" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Margin="170,45,0,0"/>
                    <ComboBox x:Name="way" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Margin="180,14,0,0" IsReadOnly="True" SelectedIndex="1" SelectionChanged="way_SelectionChanged">
                        <ComboBoxItem Content="盗版" HorizontalAlignment="Left" Width="118"/>
                        <ComboBoxItem Content="正版登录" HorizontalAlignment="Left" Width="118"/>
                    </ComboBox>
                    <ListBox x:Name="run_version_setting" HorizontalAlignment="Left" Height="170" VerticalAlignment="Top" Width="96" Margin="10,111,0,0">
                        <ListBoxItem Content="ListBoxItem"/>
                    </ListBox>
                    <Button x:Name="login" Content="登陆" HorizontalAlignment="Left" Margin="110,100,0,0" VerticalAlignment="Top" Width="160" Click="login_Click"/>
                    <Button x:Name="play" Content="开始游戏" HorizontalAlignment="Left" Margin="110,240,0,0" VerticalAlignment="Top" Width="160" Height="41" Click="play_Click"/>
                    <Label x:Name="Lancher_show" Content="" HorizontalAlignment="Left" Margin="110,125,0,0" VerticalAlignment="Top" Height="111" Width="157"/>
                </Grid>
            </TabItem>
            <TabItem Header="Java" Loaded="TabItem_Loaded">
                <Grid Background="#FFE5E5E5" Margin="0,0,0,0">
                    <Label Content="JVM" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="jvm" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Width="260" Loaded="jvm_Loaded"/>
                    <Button x:Name="test_java" Content="测试JVM路径" HorizontalAlignment="Left" Margin="10,254,0,0" VerticalAlignment="Top" Width="125" Click="test_java_Click"/>
                    <Button x:Name="reset_java" Content="重置" HorizontalAlignment="Left" Margin="145,254,0,0" VerticalAlignment="Top" Width="125" Click="reset_java_Click"/>
                    <Label Content="名称" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="jvm_Copy" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="120" Loaded="jvm_Loaded"/>
                    <Label Content="版本" HorizontalAlignment="Left" Margin="145,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="4.942,-2.99"/>
                    <ComboBox HorizontalAlignment="Left" Margin="150,35,0,0" VerticalAlignment="Top" Width="120" Height="17"/>
                </Grid>
            </TabItem>
            <TabItem Header="版本下载">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="关于">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
